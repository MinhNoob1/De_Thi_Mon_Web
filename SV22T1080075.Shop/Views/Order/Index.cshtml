@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<section class="py-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mt-5">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/User/MyAccount#tab-orders" class="text-decoration-none text-dark">Đơn hàng của tôi</a></li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">Chi tiết đơn hàng #FD-2025-001</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-lg-8">
                @* 1. Trạng thái đơn hàng *@
                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Trạng thái: <span class="text-success">Hoàn thành</span></h5>
                        <span class="text-muted">Ngày đặt: 22/12/2025</span>
                    </div>
                    @* Thanh tiến trình đơn hàng (tùy chọn) *@
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-2 small text-muted">
                        <span>Đã đặt</span>
                        <span>Đã xác nhận</span>
                        <span>Đang giao</span>
                        <span class="fw-bold text-success">Hoàn thành</span>
                    </div>
                </div>

                @* 2. Danh sách sản phẩm trong đơn *@
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <h5 class="mb-4">Sản phẩm đã mua</h5>
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="text-uppercase bg-light">
                                <tr>
                                    <th class="py-3 border-0">Sản phẩm</th>
                                    <th class="py-3 border-0">Giá</th>
                                    <th class="py-3 border-0 text-center">Số lượng</th>
                                    <th class="py-3 border-0 text-end">Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="py-3 border-0">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/thumb-bananas.png" alt="product" class="img-fluid rounded-3 me-3" style="width: 60px;">
                                            <h6 class="mb-0">Sunstar Fresh Melon Juice</h6>
                                        </div>
                                    </td>
                                    <td class="py-3 border-0">$18.00</td>
                                    <td class="py-3 border-0 text-center">x2</td>
                                    <td class="py-3 border-0 text-end fw-bold">$36.00</td>
                                </tr>
                                <tr>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/thumb-biscuits.png" alt="product" class="img-fluid rounded-3 me-3" style="width: 60px;">
                                            <h6 class="mb-0">Fresh Grapes</h6>
                                        </div>
                                    </td>
                                    <td class="py-3">$8.00</td>
                                    <td class="py-3 text-center">x1</td>
                                    <td class="py-3 text-end fw-bold">$8.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                @* 1. Địa chỉ và thông tin khách hàng *@
                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <h5 class="mb-3">Thông tin nhận hàng</h5>
                    <p class="mb-1 fw-bold">Nguyễn Văn A</p>
                    <p class="mb-1 text-muted">+84 123 456 789</p>
                    <p class="mb-0 text-muted">123 Quang Trung, Quận Hà Đông, Hà Nội</p>
                </div>

                @* 2. Hình thức thanh toán *@
                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <h5 class="mb-3">Thanh toán</h5>
                    <p class="mb-0">Hình thức: <span class="fw-bold">Thanh toán khi nhận hàng (COD)</span></p>
                </div>

                @* 3. Tổng kết đơn hàng *@
                <div class="card border-0 shadow-sm rounded-4 p-4 bg-light">
                    <h5 class="mb-3">Tổng kết đơn hàng</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính (3 sản phẩm)</span>
                        <span>$44.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển</span>
                        <span>$5.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 text-danger">
                        <span>Giảm giá mã KM</span>
                        <span>-$5.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fs-5 fw-bold">Tổng thanh toán</span>
                        <span class="fs-4 fw-bold text-primary">$44.00</span>
                    </div>
                </div>

                @* Các nút thao tác *@
                <div class="mt-4 d-grid gap-2">
                    <button class="btn btn-yellow py-3 text-uppercase fw-bold rounded-2">Mua lại lần nữa</button>
                    <a href="/User/MyAccount#tab-orders" class="btn btn-outline-dark py-3 text-uppercase rounded-2">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</section>