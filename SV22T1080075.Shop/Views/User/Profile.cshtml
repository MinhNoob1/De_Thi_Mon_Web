@{
    ViewBag.Title = "Thông tin cá nhân";
}
    <div class="card border-0 shadow-sm rounded-4 p-5">
        <h3 class="mb-4">Thông tin cá nhân</h3>
        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Họ tên</label>
                    <input type="text" class="form-control form-control-lg bg-light border-0" value="Nguyễn Văn A">
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    <input type="text" class="form-control form-control-lg bg-light border-0" value="+84 123 456 789">
                </div>
                <div class="col-md-12">
                    <label class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control form-control-lg bg-light border-0" value="abc@mail.com">
                </div>
                <div class="col-md-12">
                    <label class="form-label fw-bold">Địa chỉ</label>
                    <input type="text" class="form-control form-control-lg bg-light border-0" value="123 Quang Trung, Hà Nội">
                </div>
                <div class="col-md-12 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg text-uppercase px-5 py-3 rounded-2">
                        Lưu thay đổi
                    </button>
                </div>
            </div>
        </form>
    </div>